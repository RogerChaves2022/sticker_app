<div class="card mx-auto mt-5" style="max-width: 400px;">
  <div class="card-body">
    <h2 class="text-center">Login</h2>

    <%= form_with model: resource, url: session_path(resource_name), local: true do |f| %>
      <div class="mb-3">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, class: "form-control", required: true %>
      </div>

      <div class="mb-3">
        <%= f.label :password, class: "form-label" %>
        <%= f.password_field :password, class: "form-control", required: true %>
      </div>

      <%= f.submit "Entrar", class: "btn btn-primary w-100" %>
    <% end %>

    <div class="mt-3 text-center">
      <%= link_to "Criar conta", new_user_registration_path %> |
      <%= link_to "Esqueci minha senha", new_password_path(:user) %>
    </div>
  </div>
</div>
